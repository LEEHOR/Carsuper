<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_car_brand"
    android:background="@drawable/bg_fff_background"
    android:padding="@dimen/edge_margin"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_car_brand"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:layout_width="@dimen/carbrand_img_height_width"
        android:layout_height="20dp" />

    <TextView
        android:id="@+id/tv_carbrand_name"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iv_car_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/material_white"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_gravity="center"
        android:id="@+id/rl_commodity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:padding="@dimen/dp_12"
            android:id="@+id/top_re"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/material_white">

            <ImageView
                android:id="@+id/iv_commodity_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"/>
        </RelativeLayout>

        <RelativeLayout
            android:padding="@dimen/dp_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top_re"
            android:layout_alignLeft="@+id/top_re">

            <TextView
                android:id="@+id/tv_commodity_info"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textSize="@dimen/dp_14"
                android:maxLines="2"
                android:ellipsize="end"/>

            <TextView
                android:layout_marginTop="@dimen/dp_10"
                android:id="@+id/tv_commodity_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_14"
                android:layout_below="@+id/tv_commodity_info"
                android:textColor="@color/prominent_text_color" />

            <TextView
                android:layout_marginTop="@dimen/dp_5"
                android:id="@+id/tv_payment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_12"
                android:layout_below="@id/tv_commodity_price"
                android:textColor="@color/secondary_text_color" />

            <!-- <ImageView
                 android:layout_alignTop="@+id/tv_payment_count"
                 android:layout_alignRight="@+id/iv_commodity_img"
                 android:src="@mipmap/shopping_cart_little"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content" />-->
        </RelativeLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>
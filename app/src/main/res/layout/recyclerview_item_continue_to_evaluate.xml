<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/edge_margin"
    android:background="@drawable/bg_fff_background"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/iv_order_img"
        android:layout_gravity="center_vertical"
        android:layout_width="80dp"
        android:layout_height="80dp" />

    <TextView
        android:id="@+id/tv_order_info"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_goto_evaluate"
        android:text="去评价"
        android:background="@drawable/bg_yellow_frame_background"
        android:textColor="#ff8a00"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
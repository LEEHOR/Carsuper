<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_fff_background"
    android:padding="@dimen/edge_margin">

    <ImageView
        android:id="@+id/image0"
        android:src="@mipmap/carsuper"
        android:scaleType="fitCenter"
        android:layout_width="80dp"
        android:layout_height="80dp" />

    <TextView
        android:textSize="@dimen/dp_14"
        android:id="@+id/tv_service_name"
        android:layout_toRightOf="@+id/image0"
        android:layout_marginLeft="@dimen/dp_10"
        android:text="服务费"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_service_price"
        android:layout_alignLeft="@id/tv_service_name"
        android:layout_alignBottom="@+id/image0"
        android:textColor="@color/prominent_text_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
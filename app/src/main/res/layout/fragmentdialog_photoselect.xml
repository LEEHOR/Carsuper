<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/fl_navigator_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:textSize="@dimen/dp_14"
            android:textColor="@color/material_white"
            android:id="@+id/tv_take_photo"
            android:text="使用相机拍照"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/bg_bule200_frame_background"
            android:layout_marginLeft="@dimen/edge_margin"
            android:layout_marginRight="@dimen/edge_margin"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="@dimen/dp_14"
            android:id="@+id/tv_goto_album"
            android:textColor="@color/material_white"
            android:text="进入相簿中选择"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_bule200_frame_background"
            android:layout_marginLeft="@dimen/edge_margin"
            android:layout_marginRight="@dimen/edge_margin"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="@dimen/dp_14"
            android:id="@+id/tv_cancle"
            android:textColor="@color/material_white"
            android:text="取消"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_bule200_frame_background"
            android:layout_marginLeft="@dimen/edge_margin"
            android:layout_marginRight="@dimen/edge_margin"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background_color"
    android:orientation="vertical">

    <com.carsuper.coahr.widgets.myTittleBar.NormalTittleBar
        android:id="@+id/tittle_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_fff_background"
            android:padding="@dimen/edge_margin">
            <RelativeLayout
                android:id="@+id/line_top"
                android:paddingTop="@dimen/edge_margin"
                android:paddingBottom="@dimen/edge_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/text0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="您的爱车"
                    android:textSize="@dimen/dp_14" />


                <TextView
                    android:hint="点击箭头选择爱车"
                    android:id="@+id/tv_mylovelycar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/text0"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/dp_14" />


                <ImageView
                    android:id="@+id/iv_mylovelycar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/right"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/dp_14" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/line_top"
                android:id="@+id/view_view1"
                android:background="@color/material_grey_200"/>
            <RelativeLayout
                android:paddingTop="@dimen/edge_margin"
                android:paddingBottom="@dimen/edge_margin"
                android:id="@+id/rel_rel2"
                android:layout_below="@+id/view_view1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/text4"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="发动机型号"
                    android:textSize="@dimen/dp_14" />


                <TextView
                    android:layout_centerVertical="true"
                    android:id="@+id/tv_displacement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/text4"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/text4"
                    android:textSize="@dimen/dp_14" />
            </RelativeLayout>
            <View
                android:id="@+id/view_view2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/rel_rel2"
                android:background="@color/material_grey_200"/>

            <RelativeLayout
                android:id="@+id/rel_rel3"
                android:paddingTop="@dimen/edge_margin"
                android:paddingBottom="@dimen/edge_margin"
                android:layout_below="@+id/view_view2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/power_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="发动机马力"
                    android:textSize="@dimen/dp_14" />

                <TextView
                    android:id="@+id/tv_text_power_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/power_type"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/dp_14" />
            </RelativeLayout>

            <View
                android:id="@+id/view_view3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/rel_rel3"
                android:background="@color/material_grey_200"/>
            <RelativeLayout
                android:paddingTop="@dimen/edge_margin"
                android:paddingBottom="@dimen/edge_margin"
                android:layout_below="@+id/view_view3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:text="行驶里程"
                    android:textSize="@dimen/dp_14" />

                <EditText
                    android:id="@+id/et_drivedistance"
                    style="@style/normal_edittext_style"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/text1"
                    android:textCursorDrawable="@drawable/cursor"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:hint="请输入当前里程"
                    android:inputType="number"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/dp_14" />
            </RelativeLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_fff_background"
            android:padding="@dimen/edge_margin">

            <TextView
                android:id="@+id/tv_service_tittle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_14"
                android:text="机油服务" />

            <TextView
                android:id="@+id/tv_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="编辑"
                android:textSize="@dimen/dp_14"
                android:textColor="@color/material_red_300" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_fff_background"
            android:padding="@dimen/edge_margin">

            <ImageView
                android:id="@+id/iv_commodity_img"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/primary" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/iv_commodity_img"
                android:layout_alignBottom="@+id/iv_commodity_img"
                android:layout_toRightOf="@id/iv_commodity_img">


                <RelativeLayout
                    android:id="@+id/rl_commodity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_10">

                    <TextView
                        android:textSize="@dimen/dp_14"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:id="@+id/tv_commodity_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textSize="@dimen/dp_14"
                        android:id="@+id/tv_commodity_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:textColor="@color/prominent_text_color" />

                    <TextView
                        android:textSize="@dimen/dp_14"
                        android:id="@+id/tv_commodity_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_toRightOf="@id/tv_commodity_price"
                        android:text="x1"
                        android:textColor="@color/material_grey_400" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rl_edit_commodity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone">

                    <com.carsuper.coahr.widgets.CommodityCountView

                        android:id="@+id/ccv_commodity_count"
                        android:layout_width="@dimen/commodityCountView_width"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true" />


                    <TextView
                        android:textSize="@dimen/dp_14"
                        android:id="@+id/tv_change"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:drawableTop="@mipmap/exchange"
                        android:text="更换" />

                </RelativeLayout>
            </FrameLayout>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_element_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_fff_background"
            android:padding="@dimen/edge_margin">

            <TextView
                android:textSize="@dimen/dp_14"
                android:id="@+id/tv_element_tittle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="滤芯服务" />

            <TextView
                android:textSize="@dimen/dp_14"
                android:id="@+id/tv_element_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="编辑"
                android:textColor="@color/material_red_300" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/element"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_fff_background"
            android:padding="@dimen/edge_margin"
            android:visibility="visible">

            <ImageView
                android:id="@+id/iv_element_img"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/primary" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/iv_element_img"
                android:layout_alignBottom="@+id/iv_element_img"
                android:layout_toRightOf="@id/iv_element_img">

                <RelativeLayout
                    android:id="@+id/rl_element_msg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10">

                    <TextView
                        android:textSize="@dimen/dp_14"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:id="@+id/tv_element_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textSize="@dimen/dp_14"
                        android:id="@+id/tv_element_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:textColor="@color/prominent_text_color" />

                    <TextView
                        android:id="@+id/tv_element_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_toRightOf="@id/tv_element_price"
                        android:text="x1"
                        android:textSize="@dimen/dp_14"
                        android:textColor="@color/material_grey_400" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_element_count"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone">

                    <com.carsuper.coahr.widgets.CommodityCountView

                        android:id="@+id/ccv_element_count"
                        android:layout_width="@dimen/commodityCountView_width"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true" />


                    <TextView
                        android:textSize="@dimen/dp_14"
                        android:id="@+id/tv_elemrnt_change"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:drawableTop="@mipmap/exchange"
                        android:text="更换" />

                </RelativeLayout>
            </FrameLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/dp_14"
            android:background="@drawable/bg_fff_background"
            android:padding="@dimen/edge_margin"
            android:text="其他服务" />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rl_service_oil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_fff_background"
            android:padding="@dimen/edge_margin"
            android:visibility="gone">

            <ImageView
                android:id="@+id/image0"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/engine_oil_service" />

            <TextView
                android:textSize="@dimen/dp_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/image0"
                android:text="机油服务" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_service_tyre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_fff_background"
            android:padding="@dimen/edge_margin">


            <ImageView
                android:id="@+id/image1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/tyre_service" />

            <TextView
                android:textSize="@dimen/dp_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/image1"
                android:text="轮胎服务" />

        </RelativeLayout>
        </FrameLayout>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_gravity="bottom|right"
            android:background="@drawable/bg_fff_background">

            <TextView
                android:textSize="@dimen/dp_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/tv_totalprice"
                android:text="@string/Total_price" />

            <TextView
                android:textSize="@dimen/dp_14"
                android:id="@+id/tv_totalprice"
                android:layout_width="@dimen/dp_60"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/tv_submit_order"
                android:gravity="center"
                android:textColor="@color/material_red_600" />

            <TextView
                android:textSize="@dimen/dp_14"
                android:id="@+id/tv_submit_order"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@color/material_red_600"
                android:gravity="center"
                android:text="提交订单"
                android:textColor="@color/material_white" />
        </RelativeLayout>

</LinearLayout>
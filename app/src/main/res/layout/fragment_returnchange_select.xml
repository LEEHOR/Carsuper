<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.carsuper.coahr.widgets.myTittleBar.NormalTittleBar
        android:id="@+id/tb_tittle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tittle="选择服务类型" />

    <RelativeLayout
        android:id="@+id/rl_commodity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_fff_background"
        android:elevation="10dp"
        android:paddingBottom="5dp"
        android:paddingLeft="@dimen/edge_margin"
        android:paddingTop="5dp">


        <ImageView
            android:id="@+id/iv_commodity_img"
            android:layout_width="@dimen/commodity_info_img_dimen"
            android:layout_height="@dimen/commodity_info_img_dimen"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/tv_check"
            android:scaleType="fitXY" />


        <TextView
            android:id="@+id/tv_commodity_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/iv_commodity_img"
            android:textColor="@color/important_text_color" />


        <TextView
            android:id="@+id/tv_commodity_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_commodity_img"
            android:layout_alignLeft="@+id/tv_commodity_info"
            android:layout_marginTop="12.5dp"
            android:textColor="@color/prominent_text_color" />

        <TextView
            android:id="@+id/tv_payment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_commodity_price"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@id/tv_commodity_price"
            android:textColor="@color/secondary_text_color" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_only_return_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_fff_background"
        android:elevation="10dp"
        android:layout_marginTop="@dimen/dp_10"
        android:padding="@dimen/edge_margin">


        <ImageView
            android:id="@+id/image0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_check"
            android:scaleType="fitXY"
            android:src="@mipmap/refund" />


        <TextView
            android:id="@+id/text0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/image0"
            android:text="仅退款"
            android:textColor="@color/important_text_color"
            android:textSize="@dimen/sp_16" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/text0"
            android:layout_below="@id/text0"
            android:layout_marginTop="@dimen/dp_10"
            android:text="未收到货物"
            android:textColor="@color/secondary_text_color"
            android:textSize="13sp" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_return_good_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_fff_background"
        android:elevation="10dp"
        android:padding="@dimen/edge_margin">


        <ImageView
            android:id="@+id/image1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_check"
            android:scaleType="fitXY"
            android:src="@mipmap/reimburse" />


        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/image1"
            android:text="退货退款"
            android:textColor="@color/important_text_color"
            android:textSize="@dimen/sp_16" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/text1"
            android:layout_below="@id/text1"
            android:layout_marginTop="@dimen/dp_10"
            android:text="已收到货，需要退回已收到的货物"
            android:textColor="@color/secondary_text_color"
            android:textSize="13sp" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_exchange_good"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_fff_background"
        android:elevation="10dp"
        android:padding="@dimen/edge_margin">

        <ImageView
            android:id="@+id/image2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_check"
            android:scaleType="fitXY"
            android:src="@mipmap/returned_money" />


        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/image2"
            android:text="仅换货"
            android:textColor="@color/important_text_color"
            android:textSize="@dimen/sp_16" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/text2"
            android:layout_below="@id/text2"
            android:layout_marginTop="@dimen/dp_10"
            android:text="已收到货，需要更换已收到的货物"
            android:textColor="@color/secondary_text_color"
            android:textSize="13sp" />

    </RelativeLayout>

</LinearLayout>
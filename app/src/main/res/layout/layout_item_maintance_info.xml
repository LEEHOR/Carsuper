<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:background="@drawable/bg_fff_background"
    android:padding="@dimen/edge_margin">

    <TextView
        android:textSize="@dimen/dp_14"
        android:id="@+id/text0"
        android:text="保养时间："
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@id/iv_maintance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="@dimen/dp_14"
        android:id="@+id/tv_date"
        android:layout_toRightOf="@id/text0"
        android:layout_marginLeft="@dimen/dp_10"
        android:text="23131"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="@dimen/dp_14"
        android:id="@+id/tv_time"
        android:text="22132131313"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/iv_maintance"
        android:src="@mipmap/service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="@dimen/dp_14"
        android:id="@+id/text1"
        android:layout_below="@id/text0"
        android:layout_alignLeft="@id/text0"
        android:text="保养地址："
        android:layout_marginTop="5dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="@dimen/dp_14"
        android:id="@+id/tv_maintance_address"
        android:layout_alignLeft="@id/tv_date"
        android:layout_alignTop="@id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>